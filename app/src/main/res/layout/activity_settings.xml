<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:fitsSystemWindows="true"
tools:context="com.brendan.CCApp_vp4.Settings">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sharing:"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="@color/primary_darker"
            android:textSize="@dimen/new_event_title_size"/>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/settings_top_3_checkbox"
                android:checked="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/settings_top_3_header"
                android:text=" Top 3 List "
                android:textStyle="bold"
                android:textSize="@dimen/new_event_text_size"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/settings_master_list_checkbox"
                android:textStyle="bold"
                android:textSize="@dimen/new_event_text_size"
                android:textColor="@color/text_color_normal"
                android:checked="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/settings_master_list_header"
                android:text=" Master List "
                android:textStyle="bold"
                android:textSize="@dimen/new_event_text_size"
                android:textColor="@color/text_color_normal"
                />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications:"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="@color/primary_darker"
            android:textSize="@dimen/new_event_text_size"/>
        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="On"
                android:textStyle="bold"
                android:textSize="@dimen/new_event_text_size"
                android:textColor="@color/text_color_normal"
                android:checked="true"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="@dimen/new_event_text_size"
                android:textColor="@color/text_color_normal"
                android:text="Off"/>

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Account:"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="@color/primary_darker"
            android:textSize="@dimen/new_event_text_size"/>

        <TextView android:id="@+id/link_signup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:text="Forget Username or Password?"
            android:gravity="center"
            android:textSize="16dip"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:padding="12dp"
            android:text="Request Account Info"/>


    </LinearLayout>
</ScrollView>